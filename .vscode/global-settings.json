{
    "telemetry.enableTelemetry": false,
    "window.autoDetectColorScheme": true,
    "window.title": "${rootName}${separator}${activeEditorShort}",
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "none",
    "editor.rulers": [
        80
    ],
    "editor.accessibilitySupport": "off",
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "explorer.confirmDelete": false,
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font, MesloLGS NF, 'SourceCodePro+Powerline+Awesome Regular', Furamono Nerd Font, monospace",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.windowsExec": "C:\\Users\\Matt\\AppData\\Local\\Microsoft\\WindowsApps\\wt.exe",
    "terminal.integrated.defaultProfile.windows": "MSYS2",
    "terminal.integrated.profiles.windows": {
        "MSYS2": {
            "path": "C:\\MSYS64\\msys2_shell.cmd",
            "args": ["-mingw64", "-defterm", "-here", "-no-start"],
            "icon": "terminal-bash"
        },
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        }
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.allowForcePush": true,
    "gitlens.defaultDateFormat": "D MMMM YYYY h:mma",
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
    "gitlens.hovers.currentLine.over": "line",
    "python.terminal.activateEnvironment": false,
    "jupyter.askForKernelRestart": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "r.bracketedPaste": true,
    "r.rpath.mac": "/usr/local/bin/R",
    "r.rterm.mac": "/Users/matt/.pyenv/versions/general/bin/radian",
    "cmake.configureOnOpen": true,
    "fortran.fortls.path": "/usr/local/bin/fortls",
    "[markdown]": {
        "editor.wordWrap": "off",
        "files.trimTrailingWhitespace": false
    },
    "markdownlint.config": {
        "MD004": { "style": "sublist" },
        "MD007": { "indent": 4 },
        "MD012": false,
        "MD041": false
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "cSpell.language": "en-GB",
    "cSpell.enableFiletypes": [
        "markdown"
    ],
    "cSpell.userWords": [
        "CLAPA",
        "Twiss",
        "beamline",
        "macroparticle",
        "multiparticle",
        "quadrupoles",
        "underway",
        "unphysical"
    ]
}
