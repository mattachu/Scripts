{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "update extension list",
            "type": "shell",
            "command": "code --list-extensions > .vscode/extensions.txt",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/c" ]
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/c" ]
                    }
                }
            },
            "problemMatcher": []
        },
        {
            "label": "install extensions from list",
            "type": "shell",
            "osx": {
                "command": "cat .vscode/extensions.txt | xargs -L1 code --install-extension"
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/c" ]
                    }
                },
                "command": "FOR /F %x IN (.vscode/extensions.txt) DO code --install-extension %x"
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/d", "/c" ]
                    }
                },
                "command": "FOR /F %x IN (.vscode/extensions.txt) DO code --install-extension %x"
            },
            "problemMatcher": []
        }
    ]
}
